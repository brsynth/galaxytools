            <output name="taxid_history" md5="b4f2c5588318a1043520ef77c1db9865" />
            <output name="compartments_history" md5="973d345179c06304590bf27c7774db51" />
            <output name="biomass_history" md5="08fa413cfe0ff6439378a63395f49c0f" />
        </test>
