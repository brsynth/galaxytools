                    <param name="taxonid" value="e_coli_core" />
                </section>
            </conditional>
            <output name="taxid_history" md5="cfc5df6325c0f6a519eded6ee975a0c3" />
            <output name="compartments_history" md5="973d345179c06304590bf27c7774db51" />
